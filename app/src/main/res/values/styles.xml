<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>

        <item name="customBackgroundColor">@color/colorPrimaryDarkNight</item>
        <item name="customPrimaryTextColor">@color/primaryText</item>
        <item name="customSecondaryTextColor">@color/secondaryText</item>
        <item name="customCardBackgroundColor">@color/cardBackgroundNight</item>

    </style>



    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

</resources>